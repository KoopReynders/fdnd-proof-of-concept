  <%- include('./partials/head') %>
  <link rel="stylesheet" href="/styles/brew.css">
  <script src="/scripts/main.js" defer></script>
  <title>Brewing | Book of Potions</title>
</head>

<body>
  <a href="/potions" class="button">Potions</a>
  
  <main>
    <div class="container">
      <section class="result">
        <h2>IngrediÃ«nts</h2>
        <ul class="ingredient-list">
            <!-- Checked ingredienten komen hier te staan -->
        </ul>
      </section>

      <!-- Image placeholder zoals bijvoorbeeld een boek -->
      <img src="/assets/cauldron.png" alt="cauldron" width="400" height="400">

      <button type="submit" class="button" form="ingredient-form">Start brewing</button>
    </div>

    <form method="post" action="/brew" id="ingredient-form">
      <% ingredients.forEach(ingredient => { %>
        <div class="containter-ingredient">
          <fieldset>
            <input name="ingredients" type="checkbox" value="<%= ingredient.id %>" id="<%= ingredient.name %>">
            <label for="<%= ingredient.name %>">
              <img src="<%= ingredient.asset %>" alt="<%= ingredient.name %>" width="100" height="100">
            </label>
            <p class="mobile-label"><%= ingredient.name %></p>
          </fieldset> 
  
          <article class="ingredient-card" id="ingredient<%= ingredient.id %>">
            <h2><%= ingredient.name %></h2>
            <p><%= ingredient.description %></p>
            <img src="<%= ingredient.asset %>" alt="<%= ingredient.name %>" width="200" height="200">
          </article>
        </div>
      <% }) %> 
    </form>
  </main>
</body>
</html>